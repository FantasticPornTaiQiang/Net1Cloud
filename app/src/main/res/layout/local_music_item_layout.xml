<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp">

    <LinearLayout
        android:layout_weight="100"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="20dp">

        <TextView
            android:id="@+id/local_music_name_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="maximum the hormone"
            android:textSize="19sp"
            android:textColor="#000000"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/local_music_is_download_image_view"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/local_fb_icn_ok"
                android:layout_marginTop="3dp"/>

            <TextView
                android:id="@+id/local_music_size_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                tools:text="11.3M"/>

            <TextView
                android:id="@+id/local_music_album_name_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                tools:text="maximum the hormone"/>
        </LinearLayout>

    </LinearLayout>

    <ImageButton
        android:id="@+id/local_music_menu_image_button"
        android:layout_width="10dp"
        android:layout_height="40dp"
        android:layout_marginEnd="20dp"
        android:layout_gravity="center"
        android:src="@drawable/list_icn_more"
        style="?android:attr/borderlessButtonStyle"/>


</LinearLayout>