<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_play_all"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:background="?android:attr/selectableItemBackground">

    <ImageView
        android:id="@+id/local_all_choose_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/nact_icn_unchoosed"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"/>

    <TextView
        android:layout_toEndOf="@id/local_all_choose_box"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="@string/choose_all"
        android:textSize="17sp"
        android:textColor="@color/text_color"
        android:gravity="center"
        android:layout_marginStart="8dp"/>

    <TextView
        android:id="@+id/local_music_choose_complete"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:text="@string/ok"
        android:textSize="17sp"
        android:layout_marginEnd="8dp"
        android:textColor="@color/red"
        android:gravity="center"/>



</RelativeLayout>